@model UserData

@{
    ViewData["Title"] = "Delete User Profile";
}

<h2>Delete User</h2>

<div class="row">
    <div class="col-5">
        <form asp-controller="User" asp-action="DeletePost" method="post">
            <input  asp-for="ID" hidden />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="text" asp-for="FirstName" class="form-control mt-2" placeholder="First name" required/>
            <input type="text" asp-for="LastName" class="form-control mt-2" placeholder="Last name" required/>
            <input type="text" asp-for="Location" class="form-control mt-2" placeholder="Location" required/>
            <input type="tel" asp-for="PhoneNumber"  class="form-control mt-2" placeholder="Phone number" required/>
            <input type="email" asp-for="Email" class="form-control mt-2" placeholder="Email" required/>
                            
            <button type="submit" class="btn btn-primary w-100 mt-2">Delete</button>
        
        </form>
    </div>
</div>